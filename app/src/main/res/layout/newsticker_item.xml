<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/news_list"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/newsticker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newsticker_string"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <TextView
        android:id="@+id/newsticker_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newsticker_description_string"/>

    <!--TextView
        android:id="@+id/newsticker_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newsticker_source"/-->

</LinearLayout>
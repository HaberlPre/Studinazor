<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/edit_dialog_layout"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/newsticker_focus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:text="Focus"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/newsticker_stern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:text="Stern"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/newsticker_zeit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:text="Die Zeit"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/newsticker_BBC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:text="BBC"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/newsticker_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:text="Google"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/newsticker_NYT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:text="New York Times"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView><![CDATA[

     



     



     



      



     
     
           
]]>
</LinearLayout>